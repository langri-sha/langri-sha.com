[req]
default_bits           = 1024
default_days           = 365
encrypt_key            = no
prompt                 = no
distinguished_name     = section_distinguished_name
x509_extensions        = section_x509
req_extensions         = section_request
string_mask            = utf8only

[section_distinguished_name]
countryName            = XX
localityName           = Laputa
organizationName       = Langri-Sha
commonName             = langri-sha
emailAddress           = filip.dupanovic@gmail.com

[section_x509]
subjectKeyIdentifier   = hash
authorityKeyIdentifier = keyid,issuer
basicConstraints       = CA:FALSE
keyUsage               = digitalSignature, keyEncipherment
subjectAltName         = @alternate_names
nsComment              = "Autonomous Authoritah"

[section_request]
subjectKeyIdentifier   = hash
basicConstraints       = CA:FALSE
keyUsage               = digitalSignature, keyEncipherment
subjectAltName         = @alternate_names
nsComment              = "OpenSSL Generated Certificate"

[alternate_names]
DNS.1                  = langri-sha
DNS.2                  = localhost
