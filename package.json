{
  "name": "langri-sha.com",
  "description": "Langri-Sha org",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "webpack-dev-server --progress --open --hot --watch --https --port 8080",
    "build": "webpack --env.production --progress",
    "test": "webpack --debug --bail",
    "flow-typed-mono": "yarn workspaces run flow-typed --flowVersion $(cat .flowconfig | head -n2 | tail -n1) install --skip"
  },
  "engines": {
    "node": ">=16.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langri-sha/langri-sha.com"
  },
  "keywords": [
    "gh-pages",
    "webpack",
    "react"
  ],
  "author": "Filip DupanoviÄ‡",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/langri-sha/langri-sha.github.com/issues"
  },
  "homepage": "https://github.com/langri-sha/langri-sha.github.com#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": false,
    "bracketSpacing": true,
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json}": [
      "git add"
    ],
    "*.{js}": [
      "stylelint --syntax scss",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@emotion/core": "10.0.5",
    "@emotion/styled": "10.0.5",
    "classnames": "2.2.6",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "webfontloader": "1.6.28"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.2.3",
    "@babel/plugin-proposal-export-default-from": "7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "7.2.0",
    "@babel/plugin-proposal-optional-chaining": "7.2.0",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.12.1",
    "@langri-sha/webpack": "1.0.0-next",
    "commitizen": "3.0.5",
    "cssnano": "^4.1.8",
    "cz-conventional-changelog": "2.1.0",
    "flow-bin": "0.155.0",
    "flow-typed": "3.3.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.0",
    "normalize.css": "8.0.1",
    "preact": "8.4.2",
    "prettier": "1.15.3",
    "prettier-cli": "0.1.0",
    "source-map-support": "0.5.9",
    "stylelint": "9.9.0",
    "stylelint-config-css-modules": "1.3.0",
    "stylelint-config-standard": "18.2.0",
    "webpack": "5.2.0",
    "webpack-cli": "3.3.11"
  }
}
