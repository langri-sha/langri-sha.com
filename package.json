{
  "name": "langri-sha.github.io",
  "version": "1.0.0-alpha",
  "description": "GitHub Pages site for Langri-Sha",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "PATH=$PATH:$(pwd)/node_modules/.bin; [ ! -e local/langri-sha.key ] && npm run -s cert; webpack-dev-server -d --config webpack --hot --watch --https --port 443 --host 0.0.0.0 --key local/langri-sha.key --cert local/langri-sha.crt",
    "build": "PATH=$PATH:$(pwd)/node_modules/.bin webpack -p --config webpack --optimize-minimize --optimize-dedupe --progress",
    "test": "PATH=$PATH:$(pwd)/node_modules/.bin webpack --config webpack --debug --bail",
    "lint": "PATH=$PATH:$(pwd)/node_modules/.bin; standard | snazzy",
    "analyze": "PATH=$PATH:$(pwd)/node_modules/.bin webpack -p --config webpack --optimize-minimize --optimize-dedupe --json | webpack-bundle-size-analyzer",
    "container": "export NAME=${PWD##*/}; export CACHE=npm-lazy; export CACHE_URL=http://${CACHE}; docker ps -a | grep -q $CACHE && npm run -s container:cache-start || npm run -s container:cache-run; docker ps -a | grep -q $NAME && npm run -s container:app-start || npm run -s container:app-run",
    "container:app-start": "docker start -ai $NAME",
    "container:app-run": "docker run --name $NAME --link $CACHE -w /$NAME -p 443:443 -v $(pwd):/$NAME -v $(pwd)/package.json:/package.json -v /root/.npm -v /node_modules -e \"NODE_PATH=/node_modules\" -e \"CHOKIDAR_USEPOLLING=1\" -e \"PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/node_modules/.bin\" -e \"npm_config_registry=${CACHE_URL}\" --dns 8.8.8.8 --dns 8.8.4.4 --entrypoint=/bin/bash -it node:6",
    "container:cache-start": "docker start $CACHE",
    "container:cache-run": "docker run --name $CACHE -d langrisha/npm-lazy --port=80 --external-url=$CACHE_URL",
    "cert": "[ ! -d local ] && mkdir local; openssl req -batch -config .openssl -new -x509 -sha256 -newkey rsa -keyout local/langri-sha.key -out local/langri-sha.crt",
    "cert:analyze": "openssl x509 -in local/langri-sha.crt -text -noout"
  },
  "engines": {
    "node": "6.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langri-sha/langri-sha.github.io.git"
  },
  "keywords": [
    "gh-pages",
    "webpack",
    "react"
  ],
  "author": "Filip DupanoviÄ‡",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/langri-sha/langri-sha.github.io/issues"
  },
  "homepage": "https://github.com/langri-sha/langri-sha.github.io#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "classnames": "^2.2.5",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.25.0",
    "cssnano": "^3.7.7",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "normalize.css": "^4.2.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-font-smoothing": "^0.1.0",
    "postcss-import": "8.0.2",
    "postcss-loader": "^0.13.0",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webfontloader": "^1.6.26",
    "webpack": "2.1.0-beta.21"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-reporter": "^1.4.1",
    "snazzy": "^4.0.1",
    "source-map-support": "^0.4.2",
    "standard": "^8.0.0-beta.5",
    "standard-loader": "^5.0.0",
    "stylelint": "^7.0.3",
    "stylelint-config-standard": "^12.0.0",
    "webpack-bundle-size-analyzer": "^2.0.2",
    "webpack-dev-server": "^2.1.0-beta.0"
  }
}
