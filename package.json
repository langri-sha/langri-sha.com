{
  "name": "langri-sha.github.io",
  "version": "1.0.0-alpha",
  "description": "GitHub Pages site for Langri-Sha",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "PATH=$PATH:$(pwd)/node_modules/.bin; standard | snazzy",
    "container": "export NAME=langri-sha WORKDIR=/$NAME; if docker ps -a | grep -q $NAME; then npm run -s container:start; else npm run -s container:run; fi",
    "container:start": "docker start -ai langri-sha",
    "container:run": "docker run --name=$NAME -w /$NAME -p 443:443 -v $(pwd):/$NAME -v $(pwd)/package.json:/package.json -v /root/.npm -v /node_modules -e \"NODE_PATH=/node_modules\" -e \"CHOKIDAR_USEPOLLING=1\" -e \"PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/node_modules/.bin\" --dns 8.8.8.8 --dns 8.8.4.4 --entrypoint=/bin/bash -it node:6",
    "container:rm": "docker rm -f langri-sha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langri-sha/langri-sha.github.io.git"
  },
  "keywords": [
    "gh-pages",
    "webpack",
    "react"
  ],
  "author": "Filip DupanoviÄ‡",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/langri-sha/langri-sha.github.io/issues"
  },
  "homepage": "https://github.com/langri-sha/langri-sha.github.io#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "snazzy": "^4.0.1",
    "standard": "^8.0.0-beta.5"
  }
}
