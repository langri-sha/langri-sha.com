{
  "name": "langri-sha.github.io",
  "version": "1.0.0-alpha",
  "description": "GitHub Pages site for Langri-Sha",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "[ ! -e local/langri-sha.key ] && npm run -s cert; webpack-dev-server --env.dev=true -d --hot --watch --https --port 443 --host 0.0.0.0 --key local/langri-sha.key --cert local/langri-sha.crt",
    "build": "webpack --env.prod=true -p --optimize-minimize --progress",
    "test": "webpack --env.dev=true --debug --bail",
    "lint": "standard | snazzy",
    "analyze": "webpack --env.prod=true -p --optimize-minimize --json | webpack-bundle-size-analyzer",
    "container": "export NAME=${PWD##*/}; export CACHE=npm-lazy; export CACHE_URL=http://${CACHE}; docker ps -a | grep -q $CACHE && npm run -s container:cache-start || npm run -s container:cache-run; docker ps -a | grep -q $NAME && npm run -s container:app-start || npm run -s container:app-run",
    "container:app-start": "docker start -ai $NAME",
    "container:app-run": "docker run --name $NAME --link $CACHE -w /$NAME -p 443 -v $(pwd):/$NAME -v $(pwd)/package.json:/package.json -v /root/.npm -v /node_modules -e \"NODE_PATH=/node_modules\" -e \"CHOKIDAR_USEPOLLING=1\" -e \"PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/node_modules/.bin\" -e \"npm_config_registry=${CACHE_URL}\" --dns 8.8.8.8 --dns 8.8.4.4 --entrypoint=/bin/bash -it node:7",
    "container:cache-start": "docker start $CACHE",
    "container:cache-run": "docker run --name $CACHE -d langrisha/npm-lazy --port=80 --external-url=$CACHE_URL",
    "cert": "[ ! -d local ] && mkdir local; openssl req -batch -config .openssl -new -x509 -sha256 -newkey rsa -keyout local/langri-sha.key -out local/langri-sha.crt",
    "cert:analyze": "openssl x509 -in local/langri-sha.crt -text -noout"
  },
  "engines": {
    "node": "7.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langri-sha/langri-sha.github.io.git"
  },
  "keywords": [
    "gh-pages",
    "webpack",
    "react"
  ],
  "author": "Filip DupanoviÄ‡",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/langri-sha/langri-sha.github.io/issues"
  },
  "homepage": "https://github.com/langri-sha/langri-sha.github.io#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-inferno": "^3.1.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "classnames": "^2.2.5",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.0",
    "cssnano": "^3.10.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "inferno": "^1.2.2",
    "inferno-component": "^1.2.2",
    "normalize.css": "^6.0.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-font-smoothing": "^0.1.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.2.2",
    "ramda": "^0.23.0",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.16.1",
    "stylelint": "^7.8.0",
    "url-loader": "^0.6.0",
    "webfontloader": "^1.6.27",
    "webpack": "^2.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "commitizen": "^2.9.5",
    "cz-conventional-changelog": "^2.0.0",
    "eslint-plugin-inferno": "^6.9.2",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-reporter": "^3.0.0",
    "snazzy": "^6.0.0",
    "source-map-support": "^0.4.11",
    "standard": "^9.0.2",
    "standard-loader": "^6.0.1",
    "stylelint": "^7.8.0",
    "stylelint-config-css-modules": "^0.1.0",
    "stylelint-config-standard": "^16.0.0",
    "webpack-bundle-size-analyzer": "^2.4.0",
    "webpack-dev-server": "^2.2.1"
  }
}
